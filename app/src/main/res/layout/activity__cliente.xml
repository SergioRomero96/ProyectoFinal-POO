<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="ar.edu.unju.fi.proyectofinal.vista.cliente.ClienteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Listado de Clientes"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:typeface="sans" />

        <Button
            android:id="@+id/idBotonACliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:drawableLeft="@drawable/ic_agregarusuario"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:text="Agregar Cliente" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Buscar: "
                android:background="#dedebf"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:background="#fff"
                android:id="@+id/idTxtBusquedaCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:maxLength="11"
                android:hint="Numero de Cuit"
                android:imeOptions="actionDone"
                android:inputType="number" />

            <Button
                android:id="@+id/idBtnBuscarCliente"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:drawableStart="@drawable/ic_busqueda" />
        </LinearLayout>

        <ListView
            android:background="#fff"
            android:id="@+id/idListCliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>